@using Glass.Mapper.Sc.Web.Mvc
@model ProjectBlog.Models.Items.Details
<!-- Post Content -->
<article>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <h2>@Html.Glass().Editable(n => n.Title)</h2>
                <h3>@Html.Glass().Editable(n => n.SubTitle)</h3>
                <p>@Html.Glass().Editable(n => n.Content)</p>
                <hr />
            </div>
        </div>
    </div>
</article>